<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- This is the stroke you want to define -->
    <stroke android:width="3dp"
        android:color="@color/colorViewDarkTransparent"/>

    <!-- Optional, round your corners -->
    <corners
        android:bottomLeftRadius="0dp"
        android:topLeftRadius="6dp"
        android:bottomRightRadius="0dp"
        android:topRightRadius="6dp"/>

    <!-- Optional, fill the rest of your background with a color or gradient, use transparent if you only want the border to be displayed-->
    <gradient
        android:startColor="@color/lightBueBackgroudSolid"
        android:endColor="@color/lightBueBackgroud"
        android:angle="90"/>
</shape>
